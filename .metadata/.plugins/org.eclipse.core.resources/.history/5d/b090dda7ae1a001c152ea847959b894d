package hp.care.app.service.Impl;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;

import hp.care.app.entity.Doctor;
import hp.care.app.exception.DoctorNotFoundException;
import hp.care.app.repo.DoctorRepository;
import hp.care.app.service.IDoctorService;

public class DoctorServiceImpl implements IDoctorService {

	@Autowired
	private DoctorRepository repo;

	@Override
	public Long SaveDoctor(Doctor doc) {
		
		return repo.save(doc).getId();
	}

	@Override
	public List<Doctor> getAllDoctor() {
		
		return repo.findAll();
	}

	@Override
	public void RemoveDoctor(Long id) {
		repo.delete(getOneDoctor(id));
		
	}

	@Override
	public Doctor getOneDoctor(Long id) {
		
		return repo.findById(id).orElseThrow(()->new DoctorNotFoundException(id + "Not Exist"));
	}

	@Override
	public void updateDoctor(Doctor doc) {
		// TODO Auto-generated method stub
		
	}
	
		
}